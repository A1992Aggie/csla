<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsUi.Views.ProjectEdit"
             xmlns:csla="clr-namespace:Csla.Xaml;assembly=Csla.Xaml"
             xmlns:this="clr-namespace:ProjectTracker.Ui.Xamarin.Xaml"
             Title="Project Details">
  <ContentPage.Resources>
    <ResourceDictionary>
      <this:ErrorColor x:Key="EC" Invert="False"/>
    </ResourceDictionary>
  </ContentPage.Resources>
  <ContentPage.ToolbarItems>
    <ToolbarItem Name="Save" Command="{Binding SaveItemCommand}"/>
    <ToolbarItem Name="Assign" Command="{Binding AssignResourceCommand}"/>
  </ContentPage.ToolbarItems>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <TableView Intent="Form" Grid.Row="0">
      <TableView.Root>
        <TableSection Title="Project">
          <EntryCell Label="Name" Text="{Binding NameInfo.Value}" 
                     LabelColor="{Binding NameInfo.IsValid, Converter={StaticResource EC}}" />
          <EntryCell Label="Description" Text="{Binding Model.Description}"/>
        </TableSection>
      </TableView.Root>
    </TableView>
  </Grid>
</ContentPage>